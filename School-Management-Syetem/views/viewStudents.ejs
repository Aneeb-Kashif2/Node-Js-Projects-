<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>School Management System</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-image: url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      margin: 0;
      padding: 0;
      color: white;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.7);
      min-height: 100vh;
      padding: 30px;
    }

    h1 {
      text-align: center;
      font-size: 40px;
      margin-bottom: 30px;
    }

    .container {
      max-width: 900px;
      margin: auto;
      background: rgba(255, 255, 255, 0.1);
      padding: 30px;
      border-radius: 10px;
    }

    form label {
      font-weight: bold;
    }

    input[type="text"],
    input[type="email"] {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: none;
      border-radius: 5px;
      margin-bottom: 15px;
    }

    button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    a {
      color: #00FFFF;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    table {
      width: 100%;
      background-color: white;
      color: black;
      border-collapse: collapse;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #2f3542;
      color: white;
    }

    td a {
      margin-right: 10px;
    }

    .top-link {
      display: inline-block;
      margin-bottom: 15px;
    }

    .img-section {
      text-align: center;
      margin-bottom: 20px;
    }

    .img-section img {
      width: 120px;
      border-radius: 50%;
      border: 3px solid white;
    }
  </style>
</head>
<body>
  <div class="overlay">
    <div class="container">
      <div class="img-section">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135810.png" alt="Student Logo">
      </div>

      <h1>School Management System</h1>

      <!-- Add Student Button -->
      <% if (role === 'admin') { %>
        <a class="top-link" href="/add-student">‚ûï Add New Student</a>
      <% } %>

      <br><hr><br>

      <!-- All Students Table -->
      <h2>All Students</h2>

      <table border="1">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Course</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach((student) => { %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.email %></td>
              <td><%= student.course %></td>
              <td>
                <% if (role === 'admin') { %>
                  <a href="/edit-student/<%= student._id %>">‚úèÔ∏è Edit</a>
                  <a href="/delete-student/<%= student._id %>" onclick="return confirmDelete()">üóëÔ∏è Delete</a>
                <% } else { %>
                  <span>Access Denied</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function confirmDelete() {
      return confirm('Are you sure you want to delete this student?');
    }
  </script>
</body>
</html>
